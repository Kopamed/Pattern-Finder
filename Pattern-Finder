alert("Welcome to the Pattern Finder!")



var in1 = prompt("Enter your first string")
var ch1 = [];

var bobfor1 = 0

while (bobfor1<in1.length) {
ch1[bobfor1]=in1[bobfor1]
bobfor1+=1
}



var in2 = prompt("Enter your second string")
var ch2 = [];

var bobfor2 = 0

while (bobfor2<
in2.length) {
ch2[bobfor2]=in2[bobfor2]
bobfor2+=1
}




var total = new Array();

var a=0
var b=1
var a2=0
var b2=1
var c=0

function solve(){
    
    if (ch1[a]==ch2[a2]){
        
        if (ch1[b]==ch2[b2]){
    
        total[c]=ch1[a]+ch1[b]
        c+=1
            
        }
    }

    if (b2==ch2.length){
        a2=0
        b2=1
        a+=1
        b+=1
    }
a2+=1
b2+=1
}

while (b<ch1.length&a<ch1.length-1) {
    solve()
}
var total_test = [...new Set(total)]



document.write("Your first string:  "+ch1)
document.write("<br>")
document.write("Your second string:  "+ch2)
document.write("<br>")
document.write("<br>")





var last=0
for(last;last<total_test.length;last++){}






if (last==1){
    document.write(last+" pattern was found:<br>")
}
else if (last==0){
document.write("Sorry, no patterns were found")  
}
else {
    document.write(last+" patterns were found:<br>")
}




for (let v in total_test) {
    document.write(total_test[v])
    document.write("<br>")
}




    </script>
